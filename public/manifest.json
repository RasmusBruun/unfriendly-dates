{
  "manifest_version": 3,
  "name": "Unfriendly dates",
  "version": "0.1",

  "permissions": ["activeTab", "scripting", "storage"],

  "action": {
    "default_popup": "index.html",
    "default_title": "Unfriendly dates"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "*://github.com/*"],
      "js": ["./static/js/content.js"]
    }
  ],

  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff"
}
